{
  "compilerOptions": {
    "target": "es2018",
    "module": "ESNext",
    "lib": ["es2018"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./lib"
    ]
  },
  "include": ["lib/**/*.ts", "lib/**/*.d.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
} 